<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <data>
        <variable name="viewModel" type="me.linx.vchat.app.data.model.FragmentMeViewModel"/>
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/gl_head_img"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="?android:attr/selectableItemBackground"
            >
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_lable_head_img"
                        android:text="@string/head_img"
                        android:textAppearance="?attr/textAppearanceBody2"
                        app:layout_constraintTop_toTopOf="@id/iv_head_img"
                        app:layout_constraintBottom_toBottomOf="@id/iv_head_img"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_arrow_head_img"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/iv_head_img"
                        app:layout_constraintBottom_toBottomOf="@id/iv_head_img"
                        android:src="@drawable/ic_arrow_right_gray_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

                <!--suppress AndroidUnknownAttribute -->
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_head_img"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_lable_head_img"
                        app:layout_constraintRight_toLeftOf="@id/iv_arrow_head_img"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintWidth_percent="0.15"
                        roundImageUrl="@{viewModel.obUser.headImg}"
                        roundImageRadius="@{4}"
                        android:scaleType="centerCrop"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                    android:id="@+id/v_divider_head_img"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/divider"
                    app:layout_constraintTop_toBottomOf="@+id/gl_head_img"
            />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/gl_nick_name"
                    app:layout_constraintTop_toBottomOf="@+id/v_divider_head_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?android:attr/selectableItemBackground">
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_lable_nick_name"
                        android:text="@string/nick_name"
                        android:textAppearance="?attr/textAppearanceBody2"
                        app:layout_constraintTop_toTopOf="@id/tv_nick_name"
                        app:layout_constraintBottom_toBottomOf="@id/tv_nick_name"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_arrow_nick_name"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_nick_name"
                        app:layout_constraintBottom_toBottomOf="@id/tv_nick_name"
                        android:src="@drawable/ic_arrow_right_gray_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_nick_name"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_lable_nick_name"
                        app:layout_constraintRight_toLeftOf="@id/iv_arrow_nick_name"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constrainedWidth="true"
                        android:text="@={viewModel.obUser.nickName}"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/divider"
                    app:layout_constraintTop_toBottomOf="@+id/gl_nick_name"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>